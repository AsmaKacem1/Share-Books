                <a href="/books/<%= book._id %>" ><h4><%= book.title %></h4></a>
                <h6>$<%= book.price %></h6>
                <p><%= book.description %></p>
                <% if (book.pdfLink) { %>
                  <p><a href="<%= book.pdfLink %>" download>Download PDF</a></p>
                <% } else { %>
                  <p>No PDF available</p>
                <% } %>
              </div>
            </div>
          </div>
          <%}%>
